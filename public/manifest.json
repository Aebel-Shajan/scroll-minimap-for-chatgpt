{
  "manifest_version": 3,
  "name": "Scroll Minimap for Chatgpt",
  "version": "1.2",
  "description": "A minimap for scrolling through chatgpt messages, similar to the one in VS Code.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "js": [
        "/assets/initializeUI.js"
      ],
      "css": [
        "/assets/initializeCSS.css"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["/react/index.js", "/react/index.css", "vite.svg", "react.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "128": "logo.png"
  }
}